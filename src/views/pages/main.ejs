<%- include('../partials/head.ejs') %>
<main class="container d-flex flex-column align-items-center gap-2">
    <h2 class="text-center">Galer√≠a</h2>
    <% if (productos.length > 0){ %>
        <div class="row">
            <table class="border border-primary">
                <thead>
                    <tr class="text-center">
                        <th class="border border-primary">Nombre</th>
                        <th class="border border-primary">Precio</th>
                        <th class="border border-primary">Foto</th>
                    </tr>
                </thead>
                <tbody>
                    <% productos.forEach(e => { %>
                        <tr class="text-center">
                            <td class="border border-primary"><%= e.nombre %></td>
                            <td class="border border-primary"><%= e.precio %></td>
                            <td class="border border-primary">
                                <img src=<%=e.foto %> alt="foto producto">
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    <% } else{ %>
        <h3 class="text-center">NO HAY PRODUCTOS</h3>
    <% } %>
    <form class="mb-1" action="/" method="get">
        <input type="submit" value="Volver al inicio">
    </form>
</main>
<%- include('../partials/foot.ejs') %>